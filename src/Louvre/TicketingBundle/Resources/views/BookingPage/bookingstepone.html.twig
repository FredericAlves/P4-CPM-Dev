    <div class="formulaire">
                                {{ form_start(form) }}

                                        <div class="form-group">
                                            {{ form_errors(form.dateOfVisit) }}
                                            {{ form_label(form.dateOfVisit) }}<br/>
                                            <p id="emailAlert">Les jours "grisés" ne sont pas disponible à la réservation</p>
                                            {{ form_widget(form.dateOfVisit) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_errors(form.duration) }}
                                            {{ form_label(form.duration) }}<br/>
                                            {{ form_widget(form.duration) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_errors(form.numberOfTickets) }}
                                            {{ form_label(form.numberOfTickets) }}<br/>
                                            {{ form_widget(form.numberOfTickets) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_errors(form.email) }}
                                            {{ form_label(form.email) }}<br/>
                                            <p id="emailAlert">attention vos billets vous seront envoyés à cette adresse</p>
                                            {{ form_widget(form.email) }}
                                        </div>

                                {{ form_end(form) }}



        </div>

{% endblock %}

